<Window x:Class="WPFTeam08.ClientsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFTeam08"
        mc:Ignorable="d"
        Title="ClientsWindow" Height="450" Width="800">
    <StackPanel Width="350px" VerticalAlignment="Center">
        <Label Content="Clients" Margin="10px 0" FontWeight="Bold" FontSize="18px"/>
        <Button Name="addUserButton" Content="Add user" Margin="10px 5px" Height="35px" Click="addUserButton_Click"/>
        <Button Name="updateUserButton" Content="Update user" Margin="10px 5px" Height="35px" Click="updateUserButton_Click"/>
        <Button Name="changeUserPasswordButton" Content="Change user password" Margin="10px 5px" Height="35px"/>
        <Button Name="deleteUserButtonButton" Content="Delete user" Margin="10px 5px" Height="35px"/>
    </StackPanel>
</Window>
