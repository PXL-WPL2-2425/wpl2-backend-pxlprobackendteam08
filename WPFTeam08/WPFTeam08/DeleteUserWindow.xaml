<Window x:Class="WPFTeam08.DeleteUserWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFTeam08"
        mc:Ignorable="d"
        Title="DeleteUserWindow" Height="450" Width="800"
        KeyDown="deleteUserWindow_KeyDown"
        Background="#F1F0EA">
    <StackPanel Width="350px" VerticalAlignment="Center" Name="rootStackPanel">
        <Label HorizontalAlignment="Center" Content="Delete user" Margin="10px 0" FontWeight="Bold" FontSize="18px"/>
        <Label Content="User ID"/>
        <TextBox Name="userIDTextBox"/>
        <Button Name="deleteUserButton" Content="Delete user" Margin="0px 10px" Height="30px" Click="deleteUserButton_Click" Background="#A6AE90"/>
    </StackPanel>
</Window>
