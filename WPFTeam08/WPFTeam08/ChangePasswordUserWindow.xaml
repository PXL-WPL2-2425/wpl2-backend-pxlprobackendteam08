<Window x:Class="WPFTeam08.ChangePasswordUserWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFTeam08"
        mc:Ignorable="d"
        Title="ChangePasswordUserWindow" Height="450" Width="800"
        KeyDown="changePasswordUserWindow_KeyDown">
    <StackPanel Width="350px" VerticalAlignment="Center" Name="rootStackPanel">
        <Label Content="User ID"/>
        <TextBox Name="userIDTextBox"/>
        <Label Content="New pasword"/>
        <TextBox Name="newPasswordTextBox"/>
        <Button Name="changePasswordButton" Content="Change password" Margin="0px 10px" Height="30px" Click="changePasswordButton_Click"/>
    </StackPanel>
</Window>
